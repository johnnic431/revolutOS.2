function init(this,name,ter)
    new={};
	new.name=(name or "Log");
	new.drawables={};
	for k,v in pairs(this) do
		if k~="init" then
			new[k]=v;
		end
	end
	return setmetatable(new,this);
end

function typeof()
	return "screen";
end

function addFunction(this,tbl)
	if ~tbl.name then return false; end
	if ~tbl.draw then return false; end
	this.drawables[tbl.name]=tbl.draw;
	return true;
end

function returnFunction(this,name)
	this.drawables[name]=nil;
end

function redraw(this)
	for t,y in ipairs(this.drawables) do
		pcall(y);
	end
end